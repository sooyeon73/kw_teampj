@model AspnetCoreStudy.Models.Note3
    <div class="row">

        <div class="col-lg-2"></div>
        <div class="col-lg-8" style="padding:30px">

             <form method="post" asp-controller="Note3" asp-action="Add">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>제목</label>
                            <input type="text" class="form-control" asp-for="NoteTitle" placeholder="제목 입력" />
                            <span class="text-danger" asp-validation-for="NoteTitle"></span>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control editor" id="editor" rows="20" asp-for="NoteContents" placeholder="내용 입력"></textarea>
                            <span class="text-danger" asp-validation-for="NoteContents"></span>
                        </div>
                        <div class="form-group">
                            <label>제출 기한 마감일 </label>
                            <input style="background:white;color:black; margin:3px;"type="datetime-local" class="form-control" asp-for="DeadLine" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">저장</button>
                            <a class="btn btn-default" asp-controller="Note3" asp-action="Index">취소</a>
                        </div>
                    </form>
                </div>
                <div class="col-lg-2"></div>
        </div>
